{
    "name": "amasty/paypal-nvp-api",
    "description": "Simple paypal nvp api integration",
    "keywords": ["paypal","nvp","ipn"],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "PaypalNvpApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PaypalNvpApi\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-mbstring": "Needed to support sanitize IPN data in class IpnVerifier"
    }
}
